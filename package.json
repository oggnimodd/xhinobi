{
  "name": "shinobi",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "type": "module",
  "bin": {
    "shinobi": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "dev": "bun src/index.ts",
    "dev:watch": "bun --hot src/index.ts",
    "node:dev": "vite-node src/index.ts",
    "node:dev:watch": "vite-node --watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf coverage build tmp dist",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prebuild": "bun run lint",
    "build": "bun run clean && bun --bun tsc -p tsconfig.release.json && bun scripts/build.js",
    "prepare": "bun scripts/prepare.js",
    "pre-commit": "bun lint-staged",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "preview-coverage": "vite preview --outDir coverage",
    "type-check": "tsc -p tsconfig.release.json",
    "lint": "biome check .",
    "lint:apply": "biome check --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "dependencies": {
    "@types/yargs": "^17.0.32",
    "clipboardy": "^4.0.0",
    "text-extensions": "^2.4.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/inquirer": "^9.0.3",
    "@types/node": "~18.16.5",
    "@vitest/coverage-v8": "^0.34.3",
    "@vitest/ui": "^0.34.3",
    "bun-types": "^1.0.15",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "~5.0.5",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "ts-api-utils": "~1.0.2",
    "tslib": "~2.6.2",
    "typescript": "~5.3.2",
    "vite": "^5.0.6",
    "vite-node": "^0.34.6",
    "vite-plugin-dts": "^3.5.3",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.0.1"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,json}": [
      "biome check --apply .",
      "biome format --write ."
    ]
  }
}
